<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
  {% include "components/head.njk" %}
  <body class="font-sans text-gray-900 dark:text-gray-200">
    <div id="app" class="h-screen bg-white dark:bg-gray-900">
      {% if site.navigationStyle == "vertical" %}
        <nav id="navigation" class="fixed inset-y-0 pt-6 overflow-x-hidden overflow-y-auto hidden w:64 lg:w-72 md:block dark:bg-gray-900 flex-none top-0 p-4 w-64 md:border-r border-b border-gray-100 dark:border-gray-800">
          <div class="flex p-4 dark:bg-gray-300 rounded-md mb-4">
            <img src="/content/images/full-small.png" alt="Tidal PTC" class="shadow-none">
          </div>

          <button name="Close navigation" onclick="closeNavigation()" class="float-right justify-end block md:hidden -mr-4 p-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="dark:bg-gray-500" width="18" height="18" viewBox="0 0 18 18"><path class="text-gray-100" d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"/></svg>
          </button>
          <a href="/">
            <div class="sr-only block md:hidden pt-4 font-semibold text-gray-500">{{ site.name }}</div>
            <div class="sr-only block md:hidden text-sm text-gray-500 mb-4">{{ site.subtitle }}</div>
          </a>
          {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({anchorClass: "item", activeAnchorClass: "active", activeListItemClass: "active", activeKey: eleventyNavigation.key, listClass: "nav", listItemClass: "item"}) | safe }}
        </nav>
      {% endif %}

    {% if site.navigationStyle == 'horizontal' %}
      <section id="main" class="dark:bg-gray-900">
    {% else %}
      <section id="main" class="flex flex-col min-h-screen justify-between dark:bg-gray-900 md:pl-64 lg:pl-72">
    {% endif %}
        <div>
          {% include "components/header.njk" %}
          <main>
            {{ layoutContent | safe }}
          </main>
        </div>

        {% include "components/footer.njk" %}
      </section>
    </div>
  </body>
</html>
